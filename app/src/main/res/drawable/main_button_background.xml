<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#e517427c" />
            <padding android:bottom="8dp" android:left="32dp" android:right="32dp" android:top="8dp" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/colorLightPrimary" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ae17427c" />
            <padding android:bottom="8dp" android:left="32dp" android:right="32dp" android:top="8dp" />
            <corners android:bottomRightRadius="40dp" android:topLeftRadius="40dp" />
            <stroke android:width="2dp" android:color="@color/colorLightPrimary" />
        </shape>
    </item>
</selector>