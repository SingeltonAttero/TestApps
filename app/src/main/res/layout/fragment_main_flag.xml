<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_number_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_24"
        android:layout_marginTop="@dimen/margin_side_16"
        android:gravity="center"
        android:text="@string/question"
        android:textColor="@color/colorSecondaryGray"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flag_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_side_8"
        android:layout_marginEnd="@dimen/margin_side_16"
        android:layout_marginStart="@dimen/margin_side_16"
        android:layout_marginTop="@dimen/margin_side_8"
        android:contentDescription="@string/flag_quiz"
        android:src="@drawable/stub"
        app:layout_constraintBottom_toTopOf="@+id/question_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_number_text_view" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_side_16"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_24"
        android:gravity="center"
        android:text="@string/question"
        android:textColor="@color/colorSecondaryGray"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/row1_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/row4_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_side_8"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_24"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/answer_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2" />

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_side_8"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_24"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/row4_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2" />

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_side_8"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_24"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/row3_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:textColor="@color/button_state_color" />

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:textColor="@color/button_state_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_side_8"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_24"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/row2_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:textColor="@color/button_state_color" />

        <Button
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:textColor="@color/button_state_color" />

    </LinearLayout>


    <TextView
        android:id="@+id/answer_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_side_24"
        android:layout_marginEnd="@dimen/margin_side_24"
        android:layout_marginStart="@dimen/margin_side_16"
        android:gravity="center"
        android:text="@string/question"
        android:textColor="@color/colorSecondaryGray"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>